@page
@model AISStore.Pages.Items.DeleteModel

@{
    ViewData["Title"] = "Товары";
}

<h1>Удалить</h1>

<h3>Вы уверены?</h3>
<div>
    <h4>Товар</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Price.PriceId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Item.Stock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Item.Stock.StockId)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Item.ItemId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-page="./Index">Вернуться к списку</a>
    </form>
</div>
