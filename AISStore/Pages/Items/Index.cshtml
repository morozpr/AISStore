@page
@model AISStore.Pages.Items.IndexModel

@{
    ViewData["Title"] = "Товары";
}

<h1>Товары</h1>

<p>
    <a asp-page="Create">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Item[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item[0].Stock)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Item) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price.PriceId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock.StockId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ItemId">Изменить</a> |
                <a asp-page="./Details" asp-route-id="@item.ItemId">Подробнее</a> |
                <a asp-page="./Delete" asp-route-id="@item.ItemId">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
