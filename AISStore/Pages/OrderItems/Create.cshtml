@page
@model AISStore.Pages.OrderItems.CreateModel

@{
    ViewData["Title"] = "Состав заказа";
}

<h1>Создать</h1>

<h4>Состав заказа</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OrderItem.ItemId" class="control-label"></label>
                <select asp-for="OrderItem.ItemId" class ="form-control" asp-items="ViewBag.ItemId"></select>
            </div>
            <div class="form-group">
                <label asp-for="OrderItem.Amount" class="control-label"></label>
                <input asp-for="OrderItem.Amount" class="form-control" />
                <span asp-validation-for="OrderItem.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
