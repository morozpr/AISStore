@page
@model AISStore.Pages.Stocks.CreateModel

@{
    ViewData["Title"] = "Склад";
}

<h1>Создать</h1>

<h4>Склад</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Stock.Position" class="control-label"></label>
                <input asp-for="Stock.Position" class="form-control" />
                <span asp-validation-for="Stock.Position" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Stock.IsOnStock" /> @Html.DisplayNameFor(model => model.Stock.IsOnStock)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Stock.ItemTypeId" class="control-label"></label>
                <select asp-for="Stock.ItemTypeId" class ="form-control" asp-items="ViewBag.ItemTypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Stock.Description" class="control-label"></label>
                <input asp-for="Stock.Description" class="form-control" />
                <span asp-validation-for="Stock.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock.SupplyItemsId" class="control-label"></label>
                <input asp-for="Stock.SupplyItemsId" class="form-control" />
                <span asp-validation-for="Stock.SupplyItemsId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Вернуться к списку</a>
</div>

