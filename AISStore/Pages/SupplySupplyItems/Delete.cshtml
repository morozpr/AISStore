@page
@model AISStore.Pages.SupplySupplyItems.DeleteModel

@{
    ViewData["Title"] = "Состав поставки";
}

<h1>Удалить</h1>

<h3>Вы уверены?</h3>
<div>
    <h4>Состав поставки</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SupplySupplyItem.Supply)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SupplySupplyItem.Supply.SupplyId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SupplySupplyItem.SupplyItem)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SupplySupplyItem.SupplyItem.SupplyItemId)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="SupplySupplyItem.SupplyItemsId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-page="./Index">Вернуться к списку</a>
    </form>
</div>
